@{
    ViewBag.Title = "Manage";
}

<h2>Manage</h2>
<div ng-app="CategoryApp" ng-controller="ManageCategoryCtrl" ng-cloak>
    <button ng-click="createCategory()">Create New Category</button>
    <div style="width: 500px;">
        <table>
            <tr>
                <th>@LocalizerFactory.CreateLocalizer().GetString("ID", typeof(ApplicationText))</th>
                <th>Code</th>
                <th>Name</th>
                <th>Order</th>
                <th>Action</th>
            </tr>
            <tr ng-repeat="category in categories | orderBy: 'Order': false">
                <td>{{category.CategoryID}}</td>
                <td>{{category.CategoryCode}}</td>
                <td>{{category.CategoryName}}</td>
                <td>{{category.Order}}</td>
                <td>
                    <button ng-click="deleteCategory(category)">Delete</button>
                    <button ng-click="editCategory(category)">Edit</button>
                </td>
            </tr>
        </table>
    </div>
</div>

@section scripts{
    <script src="@Url.Content("~/Scripts/Modules/ViewModels/ManageCategories.js")" type="text/javascript"></script>
}