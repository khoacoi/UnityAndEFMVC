@{
    ViewBag.Title = "Manage";
}

<h2>Manage</h2>
<div ng-app="CategoryApp" ng-controller="ManageCategoryCtrl">
    <div style="width: 500px;">
        <table>
            <tr>
                <th>ID</th>
                <th>Code</th>
                <th>Name</th>
                <th>Order</th>
            </tr>
            <tr ng-repeat="category in categories | orderBy : 'Code':false">
                <td>{{CategoryID}}</td>
                <td>{{CategoryCode}}</td>
                <td>{{CategoryName}}</td>
                <td>{{Order}}</td>
            </tr>
        </table>
    </div>
</div>

@section scripts{
    <script src="@Url.Content("~/Scripts/Modules/ViewModels/Category.js")" type="text/javascript"></script>
}